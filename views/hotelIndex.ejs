<%- include('partials/header');-%>

<div class="container mt-4">
  <% for(let hotel of foundHotels){ %>
    <div class="d-flex justify-content-center">

      <div class="card mb-3 shadow hotelindex" >
        <div class="row">
         
          <div class="col-md-4  text-center ">
           
            <img src="<%= hotel.images[0].url %>" class="img hotelindex-img " alt="..." >
          </div>
          <div class="col-md-6 ">
            <div class="card-body ">
              <div class="d-flex justify-content-between">
                <h3 class="card-title"><%= hotel.name %></h3>
                <h4><%= hotel.overAllRating %>/5</h4>
    
              </div>
              <div class="d-flex">
              <i class="fa fa-map-marker me-2 mt-1"></i>
              <p class="card-text "><%= hotel.address %></p>
            </div>
            <hr>
            </div>
            <div class="d-flex justify-content-between m-4 pt-4 ">
              <div class="fs-5">
                <i class="fa fa-rupee"></i>
                <%= hotel.price %>
              </div>
    
              <div class=""  >
      
                <a class="btn btn-warning" style="border-radius: 0;" href="/hotelIndex/<%= hotel._id %>">View Details</a>
            </div>
            </div>
          </div>      
          </div>
        </div>
    </div>
    <% } %>
  </div>
</div>







<%- include('partials/footer');-%>
